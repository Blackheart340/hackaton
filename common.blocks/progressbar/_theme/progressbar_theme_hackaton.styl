.progressbar_theme_hackaton
{
    display: flex;
    align-items: center;

    padding: 0 8px;

    background: linear-gradient(to bottom, rgba(244,244,244,1) 0%,rgba(255,255,255,1) 49%,rgba(244,244,244,1) 100%);
    box-shadow: 0 1px 7px 0 #D6D6D6 inset;

    .progressbar__bar
    {
        background: rgba(255,255,255,.7);
    }

    &.progressbar_size
    {
        &_s
        {
            height: 30px;

            .progressbar__box
            {
                height: 15px;
            }
        }

        &_m
        {
            height: 40px;

            .progressbar__box
            {
                height: 20px;
            }
        }
    }

    .progressbar__box
    {
        padding: 1px;

        background: linear-gradient(to right, rgba(45,226,84,1) 0%,rgba(71,160,229,1) 100%);

        flex: 1 0 auto;
    }

    .progressbar__text
    {

        font-family: 'Verdana', sans-serif;

        padding-left: 5px;

        .progressbar_size_s &
        {
            font-size: 12px;
        }

        .progressbar_size_m &
        {
            font-size: 14px;
        }
    }
}
